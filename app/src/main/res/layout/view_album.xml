<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Design.Light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_3"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_3"
        android:layout_marginBottom="@dimen/dimen_3"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/albumImg"
                android:layout_width="@dimen/dimen_230"
                android:layout_height="@dimen/dimen_230"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:src="@drawable/music_notes" />

            <TextView
                android:id="@+id/albumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/albumName"
                android:textColor="@color/black"
                android:textSize="@dimen/dimenSt_14" />

            <TextView
                android:id="@+id/byArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_5"
                android:text="@string/albumName"
                android:textSize="@dimen/dimenSt_12" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>